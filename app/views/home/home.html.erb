                                    <% @last.each do |d| %>   
                                        
                                        <% if d.keys[0] == site['id'] %>  
                                            <tr>
                                                <td><%= site['name'] %></td>
                                                <td style="color: red"><%= d[d.keys[0]] %></td>
                                            </tr>
                                        <% end %>                                    
                                    <% end %>
                                   
