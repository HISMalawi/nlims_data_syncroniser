
<style>
    .tab {
        overflow: hidden;
        border: 1px solid #ccc;
        background-color: #f1f1f1;
    }
    .tab button {
        background-color: inherit;
        float: left;
        border: none;
        outline: none;
        cursor: pointer;
        padding: 14px 16px;
        transition: 0.3s;
    }

    /* Change background color of buttons on hover */
    .tab button:hover {
        background-color: #ddd;
    }

    /* Create an active/current tablink class */
    .tab button.active {
        background-color: #ccc;
    }

    /* Style the tab content */
    .tabcontent {
        display: none;
        padding: 6px 12px;
        border: 1px solid #ccc;
        border-top: none;
    }
    .float-right{
        float: right!important;
        margin:auto!important;
        background-color:rgb(128, 216, 128)!important;
        color:white!important;
    }
    button.float-right{
        padding:7px!important;
        margin-top:6px!important;
        margin-right:5px!important;
        border-radius:3px;
    }

</style>

<div class="col-sm-12" style="margin-top:5px;">

    <div class="col-sm-7" style=""> 
        <div style="border: thin solid lightgrey;height:750px;">
        <div id="main" class="col-sm-5" style="height: 750px;">

        </div>
        <div id="status-details" class="col-sm-6" style="margin-left: 5%; height: 40%;box-shadow: 2px 2px 2px 2px #888888; margin-top:40px; background-color: white;">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Site</th>
                            <th>Last Seen</th>                            
                        </tr>
                    </thead>
                    <tbody>
                       
                        <% @sites.each do |site| %>
                            
                            <% if site['enabled'] && site['sync_status'] %>
                                <tr>
                                    <td><%= site['name'] %></td>
                                    <td style="color: green">Online</td>
                                    
                                </tr>
                            <% elsif site['enabled'] && site['sync_status'] == false %>
